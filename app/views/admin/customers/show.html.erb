<div class="container">
<h4 class="row mt-4 bg-light">
<strong>
    <%= @customer.last_name %>
    <%= @customer.first_name %>さんの会員詳細</strong>
</h4>

<table class="table table-borderless">
  <thead>
    <tr>
      <td>会員ID</td>
      <td><%= @customer.id %></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>氏名</td>
      <td>
    <%= @customer.last_name %>
    <%= @customer.first_name %>
      </td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td>
      <%= @customer.last_name_kana %>
　　　<%= @customer.first_name_kana %>
　　　</td>
    </tr>
    <tr>
      <td>郵便番号</td>
      <td><%= @customer.encrypted_password %></td>
    </tr>
    <tr>
      <td>住所</td>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <td>電話番号</td>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <td>会員ステータス</td>
      <td><%= @customer.is_deleted %>
      <% if @customer.is_deleted=="false" %>
      <p class="text-secondary"><strong>退会</strong></p>
      <% else %>
      <p class="text-success"><strong>有効</strong></p>
      <% end %>
      </td>
    </tr>
  </tbody>
</table>

<div class="row mx-4">
<div class="col">
<%= link_to customers_information_path, class: 'nav-link' do %>
<button type="button" class="btn btn-success">編集する</button>
<% end %>
</div>
<div class="col">
<%= link_to customers_information_path, class: 'nav-link' do %>
<button type="button" class="btn btn-info">注文履歴一覧を見る</button>
<% end %>
</div>
</div>
</div>