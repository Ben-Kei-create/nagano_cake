<div class="container">
  <h4 class="row mt-4 bg-light bold">
    <%= @customer.first_name %><%= @customer.last_name %>さんの会員情報編集
  </h4>
  <div class="row mt-4">
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>会員ID</td>
          <td><%= f.text_field :first_name, autocomplete: "first_name" %><%= "  " %><%= f.text_field :last_name, autocomplete: "last_name" %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :first_name_kana, autocomplete: "first_name_kana" %><%= "  " %><%= f.text_field :last_name_kana, autocomplete: "last_name_kana" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.text_field :postal_code, size: "30*30", autocomplete: "postal_code" %></td>
          <td colspan="1"></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :postal_code, size: "30*30", autocomplete: "postal_code" %></td>
          <td colspan="1"></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, size: "30*30", autocomplete: "address" %></td>
          <td colspan="1"></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= f.telephone_field :telephone_number, size: "30*30", autocomplete: "telephone_number" %></td>
          <td colspan="1"></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, size: "30*30", placeholder: "0000000", autocomplete: "email" %></td>
          <td colspan="1"></td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.label :会員ステータス %>
            <%= f.radio_button :done, true %>
            <%= f.label :is_deleted, '有効', value: '有効' %>
            <%= f.radio_button :done, false %>
            <%= f.label :is_deleted, '退会', value: '退会' %>
          </td>
        </tr>
      </table>
     <%= f.submit "変更を保存", class: "btn btn-success" %>
     <% end %>
  </div>
</div>

