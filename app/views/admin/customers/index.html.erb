<div class="container">
<div class="row">
<h4 class="bg-light mt-4">
<strong>会員一覧</strong></h4>
</div>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">会員ID</th>
      <th scope="col">氏名</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @customers.each do |c| %>
    <tr>
    <td>
    <%= c.id %>
    </td>
    <td>
    <%= link_to admin_customer_path(c) do %>
    <%= c.last_name %><%= c.first_name %>
    <% end %>
    </td>
    <td>
    <%= c.email %>
    </td>
    <td>
    <% if c.is_deleted=="false" %>
    <p class="text-secondary"><strong>退会</strong></p>
    <% else %>
    <p class="text-success"><strong>有効</strong></p>
    <% end %>
    </td>
  <% end %>
</table>

<div class="row">
<%= paginate @customers %>
</div>