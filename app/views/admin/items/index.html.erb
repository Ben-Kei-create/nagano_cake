<div class="container">

<div class="row">

<div class="col-md-8 offset-md-1 mt-4">
<h1><strong>商品一覧</strong></h>
</div>

<div class="col-md-3 mt-4">
<%= link_to new_admin_item_path, class: 'nav-link' do %>
<i class="fas fa-plus"></i>
<% end %>
</div>

</div>

<div class="row">
<table class="table">
  <thead>
    <tr>
      <th scope="col" colspan="1">商品ID</th>
      <th scope="col">商品名</th>
      <th scope="col">税抜価格</th>
      <th scope="col">ジャンル</th>
      <th scope="col">ステータス</th>
    </tr>
  </thead>
</div>

  <tbody>
  <% @items.each do |t| %>
    <tr>

    <td>
    <%= t.id %>
    </td>

    <td>
　　<%= link_to t.name, admin_item_path(t) %>
    </td>

    <td>
    <%= t.price %>
    </td>

    <td>
    <%= t.genre.name %>
    </td>
    <!--アソシエーション（？？）-->

    <td>
    <% if t.is_active=="false" %>
    販売停止中
    <% else %>
    販売中
    <% end %>
    </td>
    <% end %>
    <!--if文章-->
</div>
</div>