<div class="container">

<div class="row">
<div class="col-md-8 offset-md-1 mt-4">
<h2>商品一覧</h2>
<div class="col-md-3 mt-4">
<%= link_to admin_items_path, class: 'nav-link' do %>
<i class="fas fa-plus"></i>
<% end %>
</div>
</div>
</div>

<div class="row">
<table class="table">
  <thead>
    <tr>
      <th scope="col" colspan="1">商品ID</th>
      <th scope="col">商品名</th>
      <th scope="col">税抜価格</th>
      <th scope="col">ジャンル</th>
      <th scope="col">ステータス</th>
      <th scope="col" colspan="1"></th>
    </tr>
  </thead>
</div>

  <tbody>
  <% @items.each do |t| %>
    <tr>

    <td>
    <%= t.id %>
    </td>

    <td>
　　<%= link_to t.name, admin_item_path(t) %>
    </td>

    <td>
    <%= t.price %>
    </td>

    <td>
    <%= t.genre_id %>
    </td>

    <td>
    <p><%= t.is_active %>
    </td>

    <td>
    <%= t.genre.id %>
    </td>

    <% end %>
</div>
</div>