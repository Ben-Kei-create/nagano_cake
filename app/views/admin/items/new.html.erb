<div class="container">
<h4 class="row mt-4">
商品新規登録
</h4>
</div>

<div class="form-group row">
<div class="mx-auto">

<%= form_with url: admin_items_path, method: :post, model: @item do |f| %>
    <label for="inputImage" class="col-sm-4 col-form-label">商品画像</label>
    <div class="col-sm-2">
    <%= f.file_field :profile_image, placeholder: "選択されていません", accept: "image/*" %><br>
    </div>

    <label class="col-sm-2 col-form-label">商品名</label>
    <div class="col-sm-2">
    <%= f.text_field :name, placeholder: "商品名"%><br>
    </div>

    <label class="col-sm-2 col-form-label">商品説明</label>
    <div class="col-sm-2">
    <%= f.text_area :introduction, placeholder: "商品説明" %><br>
    </div>

    <label class="col-sm-2 col-form-label">ジャンル</label>
    <div class="col-sm-2">
    <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
    </div>

    <label for="inputImage" class="col-sm-2 col-form-label">税抜価格</label>
    <div class="col-sm-2">
    <%= f.text_field :price, placeholder: "000000" %>円<br>
    </div>

    <div class="販売ステータス">
      <%= f.label :販売ステータス %>
      <%= f.radio_button :done, true %>
      <%= f.label :is_active, '販売中', value: true %>
      <%= f.radio_button :done, false %>
      <%= f.label :is_active, '販売停止中', value: false %>
    </div>
    
   <%= f.submit "新規登録", class: "btn btn-success" %>

 <% end %>
 </div>

