<%= flash[:notice] %>

<div class="container">
<h4 class="row mt-4 bg-light">
管理者ログイン</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-group row">
    <%= f.label :メールアドレス, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email" %>
    </div>
</div>

<div class="form-group row">
    <%= f.label :パスワード, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
</div>

<div class="btn-wrapper col-10">
<div class="row">
<%= f.submit 'ログイン', class: "btn btn-primary mb-3" %>
</div>
</div>
<% end %>
</div>
</div>
<%= render "admin/shared/links" %>
