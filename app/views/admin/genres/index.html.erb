<div class="container">
<h4 class="row mt-4">
ジャンル一覧・追加
</h4>


<div class="row">
<div class="mx-auto">
<%= form_with model: Genre.new, url: admin_genres_path, method: :post do |f| %>
    <label class="col-form-label">ジャンル名</label>
    <div class="col-sm-2">
    <%= f.text_field :name %><br>
    </div>
   <%= f.submit "新規登録", class: "btn btn-success" %>
 <% end %>
 </div>
 </div>


<table class="table">
  <thead>
    <tr>
      <th scope="col" colspan="2">ジャンル</th>
    </tr>
  </thead>
<% @genres.each do |t| %>
  <tbody>
    <tr>
      <td scope="row" colspan="1"><%= t.name %></td><br>
      <td><%= link_to "編集する", edit_admin_genre_path(t.id), class: "btn btn-success" %></td><p>
    </tr>
  </tbody>
</table>
<% end %>
</div>