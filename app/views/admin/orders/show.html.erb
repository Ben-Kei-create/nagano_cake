<div class="container">
  <h4 class="row mt-4 bg-light">
    注文履歴詳細
  </h4>
    <table class="table table-borderless">
      <thead>
        <tr>
          <th><strong>購入者</strong></th>
          <th><%= @order.name %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th><strong>注文日</strong></th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th><strong>配送先</strong></th>
          <td><%= @order.address %></td>
        </tr>
        <tr>
          <th><strong>支払方法</strong></th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th><strong>注文ステータス</strong></th>
          <td>
            <%= form_with model: @order, url: admin_order_path, method: :patch do |f| %>
            <%= f.select :is_active, Order.is_actives_i18n.invert %>
            <%= f.submit "更新", class: "btn btn-success" %>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>

  <div class="row">
    <div class="col-7">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th>製作ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <% @total += order.subtotal %>
          <tr>
            <th><%= order.item.name %></th>
            <th><%= order.item.with_tax_price %></th>
            <th><%= order.amount %></th>
            <th><%= order.item.with_tax_price * order.amount %></th>
            <th>
            <%= form_with model: CartItem, method: :patch do |f| %>
            <%= f.select :making_status, CartItem.making_statuses_i18n.invert %>
            <%= f.submit "更新", class: "btn btn-success" %>
            </th>
          </tr>
        </tbody>
        <% end %>
        <% end %>
      </table>
    </div>

    <div class="col-5">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th><strong>商品合計</strong><%= "  " + "  " %><%= @total %>円</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th><strong>送料</strong><%= "  " + "  " %><%= @shopping_cost %>円</th>
          </tr>
          <tr>
            <th><strong>請求金額合計</strong><%= "  " + "  " %><%= @total + @shopping_cost %>円</th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>