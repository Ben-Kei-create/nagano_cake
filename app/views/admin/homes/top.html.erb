<div class="container">
  <div class="row">
    <h4 class="col-md-8 offset-md-1 mt-4 bg-light">
      <strong>注文履歴一覧</strong>
    </h4>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">購入日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= link_to admin_order_path(order_detail) do %>
        <%= order_detail.created_at %>
        <% end %></td>
        <td><%= order_detail.order.name %></td>
        <td><%= order_detail.amount %></td>
      </tr>
  </table>
  <% end %>
</div>
  <div class="row">
    <%= paginate @order_details %>
  </div>