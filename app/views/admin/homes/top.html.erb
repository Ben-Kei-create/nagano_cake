<div class="container">
  <div class="row">
    <h4 class="col-md-8 offset-md-1 mt-4 bg-light">
      <strong>注文履歴一覧</strong>
    </h4>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">購入日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
      </tr>
    </thead>
    <% @order.each do |order| %>
    <tbody>
      <tr>
        <td>
        <%= link_to admin_order_path(order) do %>
        <%= order.created_at %>
        <% end %>
        </td>
        <td>
        <%= order.customer.first_name %>
        <%= order.customer.last_name %>
        </td>
        <td>
        <% @total = 0 %>
        <% order.order_details.each do |order_detail| %>
        <% @total = @total + order_detail.amount %>
        <% end %>
        <%= @total %>
        </td>
      </tr>
    </tbody>
    <% end %>
  </table>

</div>
  <div class="row">
    <%= paginate @order_details %>
  </div>