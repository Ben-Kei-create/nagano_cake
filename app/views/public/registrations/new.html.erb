<%= flash[:notice] %>
<div class="container">
<div class="row mt-4 bg-secondary text-white">
<h2><strong>新規会員登録</strong></h2>
</div>
<div class="row mt-4">
<table class="table table-borderless">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "public/shared/error_messages", resource: resource %>
  <thead>
    <tr>
      <th>
      名前
      </th>
      <th>
      （姓）　<%= f.text_field :first_name, autofocus: true, placeholder: "令和", autocomplete: "first_name" %>
      </th>
      <th>
      （名）　<%= f.text_field :last_name, autofocus: true, placeholder: "道子", autocomplete: "last_name" %>
      </th>
    </tr>
  </thead>
  <tbody>
      <tr>
      <th>
      フリガナ
      </th>
      <th>
      （セイ）<%= f.text_field :first_name_kana, autofocus: true, placeholder: "レイワ", autocomplete: "first_name" %>
      </th>
      <th>
      （メイ）<%= f.text_field :last_name_kana, autofocus: true, placeholder: "ミチコ", autocomplete: "last_name" %>
      </th>
    </tr>
    <tr>
      <th>
      メールアドレス
      </th>
      <th>
    　　　　<%= f.text_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email" %>
      </th>
    </tr>
    <tr>
      <th>
      郵便番号（ハイフンなし）
　　　</th>
      <th>
    　　　　<%= f.password_field :postal_code, placeholder: "0000000", autocomplete: "postal_code" %>
      </th>
    </tr>
     <tr>
      <th>
      住所
      </th>
      <th>
      　　　　<%= f.text_area :address, size: "20", placeholder: "東京都渋谷区代々木神園町0-0", autocomplete: "address" %>
      </th>
    </tr>
    <tr>
      <th>
      電話番号（ハイフンなし）
      </th>
      <th>
    　　　　<%= f.password_field :password, autocomplete: "new-password" %>
      </th>
      </tr>
      <tr>
      <th>
      パスワード（６文字以上）
      </th>
      <th>
     　　　　<%= f.text_field :telephone_number, placeholder: "00000000000", autocomplete: "telephone_number" %>
      </th>
    　</tr>
      <tr>
      <th>
      パスワード（確認用）
      </th>
      <th>
    　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </th>
      </tr>
      <tr>
      <th>
<%= f.submit "新規登録", class: "btn btn-success" %>
      </th>
      <th colspan="2">
      </th>
      </tr>
      <tr>
      <th>
<strong>既に登録済みの方</strong><br>
<%= render "public/shared/links" %>から、<br>ログインしてください。
      </th>
      <th colspan="2">
      </th>
      </tr>
  </tbody>
<% end %>
</table>
</div>
</div>


