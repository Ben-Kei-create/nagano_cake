<%= flash[:notice] %>

<div class="container">
<h4 class="row mt-4 bg-light">
<strong>配送先編集</strong></h4>

<%= form_with model: @address, url: addresses_path(@address.id), method: :patch do |f| %>
 <table class="table table-borderless">
  <thead>
    <tr>
      <td>郵便番号（ハイフンなし）</td>
      <td><%= f.text_field :postal_code, placeholder: "00000000" %></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>住所</td>
      <td><%= f.text_area :address, placeholder: "東京都渋谷区代々木神園町０−０" %></td>
    </tr>
    <tr>
      <td>宛名</td>
      <td><%= f.text_field :name, placeholder: "令和道子" %></td>
    </tr>
  </tbody>
</table>
<div class="row mx-4">
<%= f.submit '変更内容を保存', class: "btn btn-success" %>
<% end %>
</div>
</div>