<div class="container">
  <h4 class="row mt-4 bg-light">
    <strong>配送先登録/一覧</strong>
  </h4>

  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
  <table class="table table-borderless">
    <thead>
      <tr>
        <td>郵便番号（ハイフンなし）<%= f.text_field :postal_code, placeholder: "00000000" %></td>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>住所<%= f.text_field :address, :size => "40*30", placeholder: "東京都渋谷区代々木神園町０−０" %></td>
      </tr>
      <tr>
        <td>宛名<%= f.text_field :name, placeholder: "令和道子" %></td>
      </tr>
    </tbody>
  </table>

   <div class="col-3">
     <%= f.submit '新規登録', class: "btn btn-success mb-3" %>
     <% end %>
   </div>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th span="col"></th>
    </tr>
  </thead>
  <tbody>
   <% @addresses.each do |t| %>
    <tr>
      <th><%= t.postal_code %></th>
      <td><%= t.address %></td>
      <td><%= t.name %></td>
      <td>
      <%= link_to "編集する", edit_address_path(t.id), class: "btn btn-success mt-2" %>
      <%= link_to "削除する", address_path(t.id), class: "btn btn-danger mt-2", method: :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>