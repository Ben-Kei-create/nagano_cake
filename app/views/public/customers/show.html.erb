
<div class="container">
<h4 class="row mt-4 bg-light">マイページ</h4>

<h4 class="row mt-4">
<strong>登録情報</strong>
<%= link_to customers_information_path, class: 'nav-link' do %>
<button type="button" class="btn btn-primary">編集する</button>
<% end %>
</h4>

<%= form_with model: @customer do |f| %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>氏名</th>
      <th><%= f.last_name %><%= f.first_name %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>カナ</th>
      <td><%= f.name_kana %><%= f.name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.encrypted_password %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email %></td>
    </tr>
  </tbody>
</table>
<% end %>

<h4 class="row mt-4">
<strong>配送先</strong>
<%= link_to customers_information_path, class: 'nav-link' do %>
<button type="button" class="btn btn-primary">一覧を見る</button>
<% end %>
</h4>

<h4 class="row mt-4">
<strong>注文履歴</strong>
<%= link_to customers_information_path, class: 'nav-link' do %>
<button type="button" class="btn btn-primary">一覧を見る</button>
<% end %>
</h4>
</div>





