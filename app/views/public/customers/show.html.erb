<div class="container">
  <h4 class="row mt-4 bg-light">
    マイページ
  </h4>

  <div class="row">
    <table width="250" height="75">
      <tr>
        <thead>
          <td>
            <h4>
              <strong>
                登録情報
              </strong>
            </h4>
          </td>
          <th>
            <%= link_to "編集する", edit_customer_path(current_customer), class: 'btn btn-success nav-link' %>
          </th>
      </tr>
    </table>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>
            氏名
          </th>
          <th>
            <%= @customer.first_name + " " + @customer.last_name %>
          </th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            カナ
          </td>
          <td>
            <%= @customer.first_name_kana + " " + @customer.last_name_kana %>
          </td>
        </tr>
        <tr>
          <td>
            郵便番号（ハイフンなし）
          </td>
          <td>
            <%= @customer.postal_code %>
          </td>
        </tr>
        <tr>
          <td>
            住所
          </td>
          <td>
            <%= @customer.address %>
          </td>
        </tr>
        <tr>
          <td>
            電話番号
          </td>
          <td>
            <%= @customer.telephone_number %>
          </td>
        </tr>
        <tr>
          <td>
            メールアドレス
          </td>
          <td>
            <%= @customer.email %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row">
    <table width="250" height="75">
      <tr>
        <td>
          <h4>
            <strong>
              配送先
            </strong>
          </h4>
        </td>
        <th>
          <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary nav-link' %>
        </th>
      </tr>
    </table>
  </div>

  <div class="row">
    <table width="300" height="75">
      <tr>
        <td>
          <h4>
            <strong>
              注文履歴
            </strong>
          </h4>
        </td>
        <th>
          <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary nav-link' %>
        </th>
      </tr>
    </table>
  </div>
