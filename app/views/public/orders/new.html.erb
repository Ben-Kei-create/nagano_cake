<div class="container">
<h3 class="row mt-4 bg-light">
注文情報入力</h3>
<%= form_with model: @order, url: admin_items_path, method: :post do |f| %>

<h4 class="row">
お支払い方法
</h4>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card] %>

<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer]%>

<h4 class="row">
お届け先<!--下はモデルを参照しない-->
</h4>
<div class="row">
<table class="table-borderless">
<tr>
<th>ご自身の住所<br>〒<%= f.select :address_id, options_from_collection_for_select(current_customer.addresses, :id, :name) %><p></th>

<th>登録済住所先から選択<br>〒<%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><p>

新しいお届け先
郵便番号（ハイフンなし）<%= f.text_field :postal_code, placeholder: "0000000", autocomplete: "postal_code" %>
住所<%= f.text_area :address, size: "20", placeholder: "東京都渋谷区代々木神園町0-0", autocomplete: "address" %>
名前（姓）<%= f.text_field :first_name, autofocus: true, placeholder: "令和", autocomplete: "first_name" %>
　　（名）<%= f.text_field :last_name, autofocus: true, placeholder: "道子", autocomplete: "last_name" %>
</table>
</div>
<div class="row">
<%= f.submit '確認画面へ進む', class: "btn btn-primary" %>
</div>
<% end %>