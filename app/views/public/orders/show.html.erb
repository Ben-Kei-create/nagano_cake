<div class="container">
  <div class="row">
    <h3 class="col mt-4 bg-light">
      注文履歴詳細
    </h3>
  </div>

  <div class="row">
    <div class="col-6">
        <strong>
          注文情報
        </strong>
      <table class="table table-bordered">
        <thead>
          <tr>
           <td>
             注文日
            </td>
            <td>
              <%= @order.created_at %>
            </td>
          </tr>
        </thead>
        <tbody>
          <tr>
           <td>
             配送先
            </td>
            <td>
              〒<%= @order.postal_code + "  " + @order.address + "  " + @order.name %>
            </td>
          </tr>
          <tr>
            <td>
              支払方法
            </td>
            <td>
              <%= Order.payment_methods_i18n[@order.payment_method] %>
            </td>
          </tr>
          <tr>
            <td>
              ステータス
            </td>
            <td>
              <%= Order.is_actives_i18n[@order.is_active] %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-4">
      <strong>
        請求情報
      </strong>
        <% @orders.each do |order| %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <td>
              商品合計
            </td>
            <td>
              <%= order.item.with_tax_price * order.amount %>
            </td>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              配送料
            </td>
            <td>
              <%= @shopping_cost %>
            </td>
          </tr>
          <tr>
            <td>
              ご請求額
            </td>
            <td>
              <%= order.item.with_tax_price * order.amount + @shopping_cost %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <strong>注文内容</strong>
    <table class="table table-bordered">
      <thead>
        <tr>
          <td>商品</td>
          <td>単価（税込）</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.item.name %></td>
          <td><%= order.item.with_tax_price %></td>
          <td><%= order.amount %></td>
          <td><%= order.item.with_tax_price * order.amount %></td>
        </tr>
    </tbody>
    <% end %>
   </table>
  </div>
</div>