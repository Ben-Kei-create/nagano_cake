<div class="container">
   <div class="row">
     <h3 class="col mt-4 mx-auto bg-light">
       注文履歴一覧
      </h3>
   </div>
   <div class="row">
     <table class="table table-bordered">
       <thead>
         <tr>
           <th>注文日</th>
           <th>配送先</th>
           <th>注文商品</th>
           <th>支払金額</th>
           <th>ステータス</th>
           <th>注文詳細</th>
           <th scope="1"></th>
         </tr>
       </thead>
       <tbody>
         <% @orders.each do |order| %>
         <tr>
           <th>
             <%= order.created_at %>
           </th>
           <th>
             〒<%= order.postal_code + "  " + order.address + "  " + order.name %>
           </th>
           <th>
             <% order.order_details.each do |order_detail| %>
             <%= order_detail.item.name %>
             <% end %>
           </th>
           <th>
           <%= order.total_price %>
           </th>
           <th>販売ステータス</th>
           <th>
           <% if order.is_active == false %>
           発送済み
           <% else %>
           入金確認
           <% end %>
           </th>
           <th><%= link_to "表示する", order_path(order), class: "btn btn-primary" %></th>
         </tr>
        </tbody>
        <% end %>
      </table>
   </div>
</div>