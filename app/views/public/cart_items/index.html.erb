<div class="container">
<h3 class="row mt-4 bg-light">ショッピングカート</h3>
<% link_to "カートを空にする", items_path, method: :destroy_all, class: ""%>


<table class="table table-bordered">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
<% @cart_items.each do |c| %>
  <tbody>
    <tr>
      <th><% c.item.name %></th>
      <th><% c.item.price %></th>
      <th><%= c.select :amount, [*1..10] %><% c.submit "変更", class: "btn btn-success"%></th>
      <th></th>
      <th><></th>
    </tr>
  </tbody>
</table>
<% end %>
<%= link_to "買い物を続ける", root_path, class: 'btn btn-primary' %>


