<div class="container">
<h3 class="row mt-4 bg-light">ショッピングカート</h3>
<% link_to "カートを空にする", items_path, method: :destroy_all, class: ""%>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
<% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <th><% cart_item.item.name %></th>
      <th><%= cart_item.item.with_tax_price%></th>
      <th><%= cart_item.select :amount, [*1..10] %> <% cart_item.submit "変更", class: "btn btn-success"%><%= item.quantity %></th>
      <th><%= cart_item.subtotal %></th>
      <th><%= button_to '削除', item, method: :delete %></th>
    </tr>
  </tbody>
</table>
<div class="row">
<%= link_to "買い物を続ける", root_path, class: 'btn btn-primary' %>
<% @total = @total+cart_item.subtotal %>
<td>合計金額</td>
<td>￥<%= @total %></td>
<% @合計金額 +=  cart_item.subtotal %>
</div>
<% end %>


