<div class="container">
<div class="row mt-4">
<h2>商品一覧(全○○件)</h2>
</div>

<div class="row mt-4">
  <% @items.each do |t| %>
        <div class="col-md-3">
          <div class="card mb-4 shadow-sm">
<%= image_tag t.get_profile_image(100,100), width: '100%', height: '80%' %><br>
            <div class="card-body">
            商品名<%= t.name %><p>
            ￥<%= t.price %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>