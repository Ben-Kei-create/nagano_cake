<div class="container">
  <div class="row mt-4">
    <h2>商品一覧（全<%= @items.count %>件）</h2>

  </div>
  <div class="row mt-4">
    <% @items.each do |t| %>
      <div class="col-md-3">
      <div class="card mb-4 shadow-sm">
        <%= link_to item_path(t) do %>
　　　  <%= image_tag t.get_profile_image(100,100), width: '100%', height: '80%' %><br>
　　    <% end %>
      <div class="card-body">
        商品名<%= t.name %>
        ￥<%= t.price %>
      </div>
      </div>
      </div>
    <% end %>
  </div>
    <div class="row mt-4">
 <%= paginate @items %>
</div>
</div>

